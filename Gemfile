  gem 'rubocop-rake'            # Code style checking
  gem 'rubocop-rspec'           # Code style checking
  gem 'rubocop-sorbet'          # Code style checking
  gem 'rubocop-thread_safety'   # Code style checking
  gem 'solargraph'              # Code style checking
  gem 'tapioca', require: false # Type checking
end
