# frozen_string_literal: true

source 'https://rubygems.org'

ruby '3.4.3'

gem 'abbrev'                    # Required for highline/commander in Ruby 3.4+
gem 'colorize'                  # Adds colorization to terminal output
gem 'commander'                 # Command-line interface framework
gem 'pastel'                    # Terminal output styling
gem 'sorbet-static-and-runtime' # Type checking
gem 'tty-box'                   # Terminal output styling
gem 'tty-color'                 # Terminal output styling
gem 'tty-command'               # Terminal output styling
gem 'tty-config'                # Terminal output styling
gem 'tty-cursor'                # Terminal output styling
gem 'tty-editor'                # Text editing
gem 'tty-file'                  # Terminal output styling
gem 'tty-font'                  # Terminal output styling
gem 'tty-link'                  # Terminal output styling
gem 'tty-logger'                # Terminal output styling
gem 'tty-markdown'              # Markdown rendering
gem 'tty-pager'                 # Paging output
gem 'tty-pie'                   # Terminal output styling
gem 'tty-platform'              # Terminal output styling
gem 'tty-progressbar'           # Terminal output styling
gem 'tty-prompt'                # Interactive command line prompt
gem 'tty-screen'                # Screen size detection
gem 'tty-spinner'               # Loading spinner
gem 'tty-table'                 # Table formatting
gem 'tty-tree'                  # Tree formatting
gem 'tty-which'                 # File path resolution

group :development do
  gem 'pry'                     # Debugging
  gem 'pry-doc'                 # Debugging
  gem 'pry-rescue'              # Debugging
  gem 'pry-stack_explorer'      # Debugging
  gem 'rake'                    # Task runner
